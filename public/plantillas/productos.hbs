<h1 style="text-align:center">Listado de Productos</h1>
{{#if productos}}
{{#if admin}}
<div class="card-group">
    {{#each productos}}
    <div class="card">
        <img style="width:50%" src={{this.foto}} class="rounded mx-auto d-block" alt="not found">
        <div class="card-body">
            <h3 class="card-title">{{this.nombre}}</h3>
            <p class="price">${{this.precio}}</p>
            <p class="card-text">{{this.descripcion}}</p>
            <p class="card-text">Categoria: {{this.categoria}}</p>
            <p class="card-text">id de Producto: {{this.id}}</p>
            <p class="card-text">Stock Disponible: {{this.stock}}</p>
            <p class="card-text">{{this.timestamp}}</p>
            <p><button onclick='agregarProdCarrito({{this.id}})'>Agregar a carrito</button></p>
            <p><button data-bs-target="#ModalCarga" data-bs-toggle="modal"
                    onclick='cargaActualizaProd({{this.id}})'>Actualizar</button></p>
            <p><button onclick='eliminarProd({{this.id}})'>Eliminar</button></p>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<div class="card-group">
    {{#each productos}}
    <div class="card">
        <img style="width:50%" src={{this.foto}} class="rounded mx-auto d-block" alt="not found">
        <div class="card-body">
            <h3 class="card-title">{{this.nombre}}</h3>
            <p class="price">${{this.precio}}</p>
            <p class="card-text">{{this.descripcion}}</p>
            <p class="card-text">Categoria: {{this.categoria}}</p>
            <p class="card-text">id de Producto: {{this.id}}</p>
            <p class="card-text">Stock Disponible: {{this.stock}}</p>
            <p class="card-text">{{this.timestamp}}</p>
            <p><button onclick='agregarProdCarrito({{this.id}})'>Agregar al carrito</button></p>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}
{{else}}
<h3 class="alert alert-danger">No se encontraron productos</h3>
{{/if}}